<Window x:Class="Expendiature_Program.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PasswordWindow" Height="305" Width="386">
    <Grid>
        <PasswordBox x:Name="password_box" HorizontalAlignment="Left" Margin="80,95,0,0" VerticalAlignment="Top" Width="215" Height="28"/>
        <StatusBar HorizontalAlignment="Left" Height="21" Margin="0,244,0,0" VerticalAlignment="Top" Width="378">
            <ListBoxItem Content="Date/Time:"/>
            <ListBoxItem x:Name="date_time" Content="dd/mm/yyyy hh:mm:ss"/>
        </StatusBar>
        <Label Content="Please input your password" HorizontalAlignment="Left" Margin="86,59,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="enter_btn" Content="Enter" HorizontalAlignment="Left" Margin="145,168,0,0" VerticalAlignment="Top" Width="84" Height="25" FontSize="14" Click="enter_btn_Click"/>
        <Label x:Name="notification" Content="" HorizontalAlignment="Left" Margin="80,134,0,0" VerticalAlignment="Top" Width="179"/>

    </Grid>
</Window>
