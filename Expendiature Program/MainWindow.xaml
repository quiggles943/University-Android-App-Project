        <RadioButton x:Name="add_rbtn" Content="Add" HorizontalAlignment="Left" Margin="92,59,0,0" VerticalAlignment="Top" Checked="add_rbtn_Checked"/>
        <RadioButton x:Name="edit_rbtn" Content="Edit" HorizontalAlignment="Left" Margin="157,59,0,0" VerticalAlignment="Top" Checked="edit_rbtn_Checked"/>

    </Grid>
</Window>
